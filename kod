def Buying(API, token, item, price): 
    site_name = "https://bitskins.com/api/v1/buy_item/?api_key={}&item_ids={}&prices={}&app_id=730&code={}".format(API, item, price, token.now())
    site = requests.get(site_name)
    table = site.json()
    print(table)
