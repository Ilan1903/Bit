import requests
import pyotp
import urllib


API_KEY = ' '
my_secret = ' '
my_token = pyotp.TOTP(my_secret) #Tworzenie 30 sek kodu
site_name = "https://bitskins.com/api/v1/get_account_balance/?api_key={}&code={}".format(API_KEY, my_token.now()) 
def check_balance(website):         
    site = requests.get(site_name)
    table = site.json()
    return table['data']['available_balance']

current_balance = check_balance(site_name)
print(current_balance)
